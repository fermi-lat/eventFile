package eventFile
version v3r4p3

author Bryson Lee <blee@slac.stanford.edu>

use ldfExt * IExternal

use GlastPolicy v*
use facilities v*
use lsfData v*
use enums v*

apply_pattern package_include
apply_pattern package_headers
apply_pattern package_linkopts
apply_pattern package_stamps
apply_pattern shared_library
apply_pattern ld_library_path

set LDFROOT ${ldfExt_DIR}

private

macro_append cppflags "-D_FILE_OFFSET_BITS=64 -DHAVE_FACILITIES " \
	WIN32	" /D __i386 /D HAVE_FACILITIES /Zp4 "

library eventFile ${eventFile_headers} \
	EBF_Data.cxx \
	LSE_Context.cxx \
	LSE_GemTime.cxx \
	LSE_Info.cxx \
	LSEHeader.cxx \
	LSEReader.cxx \
	LSFReader.cxx \
	LSEWriter.cxx \
	LSE_Keys.cxx

application writeMerge writeMerge.cxx

application test_LSEReader test/test_LSEReader.cxx test/LDFdump.cxx

application test_LSFReader test/test_LSFReader.cxx test/LDFdump.cxx

application dumpEvent test/dumpEvent.cxx test/LDFdump.cxx
